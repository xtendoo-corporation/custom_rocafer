<odoo>
    <data>
        <record id="view_order_line_tree_add_total_units" model="ir.ui.view">
            <field name="name">sale.order.line.tree.add.total.units</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_subtotal']" position="after">
                    <field name="total_units" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_inherit_add_total_units" model="ir.ui.view">
            <field name="name">sale.order.form.add.total.units</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="total_units" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
