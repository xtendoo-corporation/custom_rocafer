<odoo>
 <template id="report_saleorder_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_priceunit']" position="replace">
            <th name="th_priceunit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Precio Millar</span></th>
        </xpath>

        <xpath expr="//td[@name='td_quantity']" position="replace">
            <td name="td_quantity" class="text-end">
                <span t-field="line.quantity" t-options='{"widget": "float", "precision": 3}'/>
            </td>
        </xpath>
 </template>
</odoo>
