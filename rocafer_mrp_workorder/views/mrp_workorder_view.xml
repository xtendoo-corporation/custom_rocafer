<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="rocafer_workorder_tree_view_inherit" model="ir.ui.view">
        <field name="name">rocafer.workorder.tree</field>
        <field name="model">mrp.workorder</field>
        <field
            name="inherit_id"
            ref="mrp.mrp_production_workorder_tree_editable_view"
        />
        <field name="arch" type="xml">

            <field name="name" position="after">
                <!--OPERACION-->
                <field name="workcenter_operation_id" options="{'no_create': False}"/>
            </field>

            <field name="workcenter_operation_id" position="after">
                <!--EMPLEADO-->
                <field name="employee_id"/>
            </field>

            <field name="partner_id" position="after">
                <!--FECHA DE PEDIDO-->
                <field name="date_order" widget="date"/>
            </field>

<!--            <xpath expr="//field[@name='name']" position="replace"/>-->
        </field>
    </record>
</odoo>
